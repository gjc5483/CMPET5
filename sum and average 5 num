#include <stdio.h>

int main()
{
    float values[4];
    float sum = 0;
    float average = 0;
    
    for(int i = 0; i<=4; i++){
        printf("Please enter a float value:\n");
        scanf(" %f", &values[i]);
        sum = sum + values[i];
        
    }
    average = sum / 5;

    printf("Sum is equal to %f\n", sum);
    printf("Average  is equal to %f\n", average);
    return 0;

}
