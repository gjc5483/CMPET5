//This program is to calculate area of a square having its side
// Including a library file that contains all the declarations of std functions for input & output 
#include <stdio.h>
#include <math.h>

int main()
{
//start of program
    float side, area;
    
    printf("\n enter the side length \n");
    scanf(" %f", &side);
    //alculation of the area using the mathematical formula
    area = pow(side, 2);
    //display the area
    printf("The area of the square= %f", area);

    return 0;
    //End the main program
}
