#include <stdio.h>
void main(){
    int month;
    printf("Enter the month:\n");
    scanf(" %d",&month);
    switch(month) {
        case 1:
        case 3:
        case 5:
        case 7:
        case 8:
        case 10:
        case 12: printf("\nNumber of days=31\n");
        break;
        case 4:
        case 6:
        case 9:
        case 11: printf("\nNumber of days=30\n");
        break;
        case 2:printf("\nNumber of days=28 or 29 in the leap year\n");
        break;
        default: printf("\nYou entered an invalid month\n");
    }
}
