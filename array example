#include <stdio.h>

int main()
{
    float values[4], max_number =0;
    int index;
    
    for(int i=0; i<5; i++){
        printf("Enter value: ");
        scanf("%f", &values[i]);
        if(values[i]>max_number){
            max_number = values[i];
            index = i;
        }
    }
    
    printf("Max Number is %f and its location is %d", max_number, index);
    
    return 0;
}
