#include <stdio.h>

int main()
{
    float triangleArea, base, height;
    
    for(int i=0; i<5; i++){
        printf("\nEnter base of triangle: ");
        scanf("%f", &base);
        printf("\nEnter height of triangle: ");
        scanf("%f", &height);
        
        if(base <= 0 || height <= 0){
            printf("Skipping calculation\n");
        }else{
            triangleArea = 0.5 * base * height;
            printf("\nTriangle Base: %f\nTriangle Height: %f\nTriangle Area: %f\n", base, height, triangleArea);
        }
    }
    
    return 0;
}
