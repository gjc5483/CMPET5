//This program is to calculate area of a square having its side
// Including a library file that contains all the declarations of std functions for input & output 
#include <stdio.h>
#include <math.h>

int main()
{
    float radius, area;
    double pi = 3.141592;
    
    printf("\n enter the radius length \n");
    scanf(" %f", &radius);
    area = pow(radius, 2) * pi;
    printf("The area of the circle= %f", area);

    return 0;
}
