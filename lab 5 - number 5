#include <stdio.h>
#include <math.h>

int main()
{
    int userInput;
    long int sum = 0, factorial = 1;
    
    printf("Please enter value for use in calculation: ");
    scanf("%d", &userInput);
    
    for(int counter=1;counter<=20;counter++){
        for(int i=counter; i>0; i--){
            
            factorial = factorial*i;
            printf("fact%ld", factorial);
        }
        sum = sum + (pow(userInput, counter)/factorial);
        //counter++;
    }
    
    printf("Sum of the series is: %ld", sum);
    
    return 0;
}
