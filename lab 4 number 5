#include <stdio.h>

int main()
{
    int number, odd_sum = 0, even_sum = 0;
    printf("\nPlease enter a number: ");
    scanf("%d", &number);
    
    while(number >0){
        
        if(number%2 == 0){
            even_sum = even_sum +number;
        }else{
            odd_sum = odd_sum + number;
        }
        printf("\nPlease enter a number: ");
        scanf("%d", &number);
    }
    
    printf("Even sum is %d\n", even_sum);
    printf("Odd sum is %d", odd_sum);
    
    
    return 0;
}
